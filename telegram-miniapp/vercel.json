{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.js" },
    { "src": "/public/(.*)", "dest": "public/$1" },
    { "src": "/(.*)", "dest": "server/index.js" }
  ],
  "env": {
    "BOT_TOKEN": "@bot-token",
    "WEBAPP_URL": "https://eastsea.monster/games",
    "NODE_ENV": "production"
  }
}
