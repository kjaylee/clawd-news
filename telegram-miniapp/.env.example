# ======================================
# Telegram Mini App — 환경 변수
# ======================================
# .env 파일로 복사 후 값 입력:
#   cp .env.example .env

# [필수] BotFather에서 받은 봇 토큰
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# [필수] Mini App이 호스팅되는 URL (끝에 / 없이)
WEBAPP_URL=https://eastsea.monster/games

# [필수] 백엔드 서버 URL (결제/API용)
API_URL=https://api.eastsea.monster

# [선택] Webhook URL (polling 대신 webhook 사용 시)
WEBHOOK_URL=https://api.eastsea.monster/api/webhook

# [선택] 서버 포트
PORT=3000

# [선택] 광고 네트워크 ID
RICHADS_PUBLISHER_ID=
MONETAG_ZONE_ID=

# [선택] 로그 레벨
LOG_LEVEL=info

# [선택] Node 환경
NODE_ENV=development
